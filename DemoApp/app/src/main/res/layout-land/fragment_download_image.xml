<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  >
  <data>
    <import type="android.view.View" />
    <variable
      name="viewModel"
      type="sk.vican.demoapp.ui.downloadImage.DownloadViewModel"
      />
  </data>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="@dimen/width_layout_landscape"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:padding="@dimen/horizontal_activity_margin"
      >
      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_text_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_text_input"
        app:layout_constraintBottom_toTopOf="@id/password_text_input"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/horizontal_activity_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/username_edit_text_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/download.username"
          android:imeOptions="actionDone"
          android:inputType="text"
          android:text="@{viewModel.username}"
          tools:text="some"
          />
      </com.google.android.material.textfield.TextInputLayout>
      <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_text_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_text_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_text_input"
        app:passwordToggleEnabled="true"
        >
        <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/password_edit_text_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/download.password"
          android:imeOptions="actionDone"
          android:inputType="textPassword"
          android:text="@{viewModel.password}"
          tools:text="test@example.com"
          />
      </com.google.android.material.textfield.TextInputLayout>
      <ProgressBar
        android:id="@+id/loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/download_image_button"
        app:layout_constraintEnd_toEndOf="@id/download_image_button"
        app:layout_constraintStart_toStartOf="@id/download_image_button"
        app:layout_constraintTop_toTopOf="@id/download_image_button"
        />
      <com.google.android.material.button.MaterialButton
        android:id="@+id/download_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download.download_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_text_input"
        />
      <com.google.android.material.button.MaterialButton
        android:id="@+id/show_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download.show_image"
        android:visibility="@{safeUnbox(viewModel.isShowImagesButton) ? View.VISIBLE : View.GONE}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/download_image_button"
        />
      <com.google.android.material.button.MaterialButton
        android:id="@+id/remove_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download.remove_image"
        android:visibility="@{safeUnbox(viewModel.isShowImagesButton) ? View.VISIBLE : View.GONE}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_image_button"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </LinearLayout>

</layout>
